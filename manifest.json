{
  "manifest_version": 2,
  "name": "USC Schedule Helper",
  "description": "Shows available seats, professor ratings, and gives you the ability to export your calendar!",
  "version": "12.0",
  "permissions": [
    "*://classes.usc.edu/*/classes/*",
    "*://webreg.usc.edu/*",
    "http://jonlu.ca/*",
    "https://jonlu.ca/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://classes.usc.edu/*/classes/*",
        "*://webreg.usc.edu/*"
      ],
      "js": [
        "js/libs/jquery.js",
        "js/common.js",
        "js/libs/moment.js",
        "js/libs/mailcheck.min.js",
        "js/libs/sweetalert.min.js",
        "USCScheduleHelper.js"
      ]
    }
  ],
  "icons": {
    "64": "images/icon64.png",
    "32": "images/icon32.png",
    "38": "images/icon.png",
    "128": "images/icon128.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "js/common.js",
      "js/hot-reload.js"
    ]
  },
  "browser_action": {
    "default_popup": "html/popup.html",
    "default_title": "USC Schedule Helper"
  },
  "homepage_url": "https://jonlu.ca",
  "web_accessible_resources": [
    "data/*",
    "css/*",
    "images/*",
    "js/*"
  ]
}
